<Page x:Class="AdminArchive.View.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:vm="clr-namespace:AdminArchive.ViewModel" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      Foreground="{DynamicResource TextFillColorPrimaryBrush}">
    <Page.DataContext>
        <vm:LoginVM/>
    </Page.DataContext>
    <Grid>
        <Border CornerRadius="8" Background="{DynamicResource ApplicationBackgroundBrush}" BorderThickness="1" Width="400" Height="390">
            <Grid>
                <StackPanel Orientation="Vertical" Margin="50,0">
                    <TextBlock Text="Авторизация" FontSize="30" HorizontalAlignment="Center" Margin="25,25,25,15" FontWeight="UltraBlack"/>
                    <TextBlock FontSize="20" HorizontalAlignment="Left">Логин</TextBlock>
                    <ui:TextBox Text="{Binding Login}"  Height="35" Margin="0,5,0,10"/>
                    <TextBlock Text="Пароль" HorizontalAlignment="Left"  FontSize="20"/>
                    <ui:PasswordBox Password="{Binding Password}"  Margin="0,5"/>
                    <ui:Button Command="{Binding Login}" Appearance="Info" Margin="0,25" Height="35" Width="294" Content="Войти"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
